<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <handlers>
            <add name="httpPlatformHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified" />
        </handlers>
        <httpPlatform processPath="%HOME%\site\wwwroot\antenv\Scripts\python.exe"
                      arguments="%HOME%\site\wwwroot\startup.sh"
                      stdoutLogEnabled="true"
                      stdoutLogFile="%HOME%\LogFiles\python.log"
                      startupTimeLimit="180">
            <environmentVariables>
                <environmentVariable name="PYTHONPATH" value="%HOME%\site\wwwroot" />
                <environmentVariable name="PORT" value="%HTTP_PLATFORM_PORT%" />
                <environmentVariable name="DJANGO_SETTINGS_MODULE" value="core.settings.production" />
                <environmentVariable name="PATH" value="%PATH%;%HOME%\site\wwwroot\antenv\Scripts" />
                <environmentVariable name="DJANGO_SECRET_KEY" value="your-production-secret-key-here" />
            </environmentVariables>
        </httpPlatform>
    </system.webServer>
</configuration>
